# Environment configuration for Vercel deployment
# Copy this to .env in your project root and customize the values

# === POSTMARK CONFIGURATION ===
# Your Postmark webhook secret for signature verification
# Get this from your Postmark account > Server Settings > Webhooks
POSTMARK_WEBHOOK_SECRET=your_postmark_webhook_secret_here

# === ENVIRONMENT SETTINGS ===
# Set to "production" for Vercel deployment
ENVIRONMENT=production

# === LOGGING CONFIGURATION ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "text" for human-readable, "json" for structured logging
LOG_FORMAT=json

# Disable console colors in production (Vercel logs don't need colors)
ENABLE_CONSOLE_COLORS=false

# === SECURITY SETTINGS ===
# Set to "true" to require API keys for certain endpoints
API_KEY_REQUIRED=false

# Comma-separated list of valid API keys (only if API_KEY_REQUIRED=true)
# VALID_API_KEYS=key1,key2,key3

# === PROCESSING SETTINGS ===
# Maximum processing time in seconds (keep under Vercel's function timeout)
MAX_PROCESSING_TIME=25

# Enable async processing for better performance
ENABLE_ASYNC_PROCESSING=true

# === WEBHOOK SETTINGS ===
# Webhook endpoint path (should match Vercel routes)
WEBHOOK_ENDPOINT=/webhook

# === OPTIONAL: CUSTOM DOMAIN ===
# If you're using a custom domain for your Vercel deployment
# CUSTOM_DOMAIN=your-domain.com

# === OPTIONAL: MONITORING ===
# Enable additional monitoring and metrics
# ENABLE_METRICS=true
# METRICS_ENDPOINT=/metrics
