# Example environment variables for Email Parsing MCP Server

# Server Port
APP_PORT=8000

# Postmark Webhook Secret (generate a strong secret for production)
POSTMARK_WEBHOOK_SECRET=

# Logging Configuration
LOG_LEVEL="INFO" # Can be DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="text" # Can be "text" or "json"
# For production, it's recommended to set LOG_FORMAT to "json" and LOG_LEVEL to "INFO" or higher.

# Environment (development or production)
# This affects logging format and level if not overridden by specific LOG_LEVEL/LOG_FORMAT vars.
ENVIRONMENT="development"
