{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/index.py",
      "headers": {
        "X-Vercel-Protection-Bypass": "webhook-endpoint"
      }
    },
    {
      "src": "/health",
      "dest": "/api/index.py",
      "headers": {
        "X-Vercel-Protection-Bypass": "health-check"
      }
    },
    {
      "src": "/api/health",
      "dest": "/api/index.py",
      "headers": {
        "X-Vercel-Protection-Bypass": "health-check"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/mcp/(.*)",
      "dest": "/api/mcp.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}
